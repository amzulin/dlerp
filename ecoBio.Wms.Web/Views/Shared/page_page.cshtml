@{
    
    var pageIndex =ViewBag.pageIndex;
    var totalRecord = ViewBag.totalCount;
    var pageSize = ViewBag.pageSize;
    System.Text.StringBuilder sb=new System.Text.StringBuilder();
    if (totalRecord > 0)
    {

        if (pageIndex < 1)
        {
            pageIndex = 1;
        }
        int totalPage = (totalRecord + pageSize - 1) / pageSize;

        int nextPage = 0;
        int upPage = 0;

        if (pageIndex > totalPage)
        {
            pageIndex = totalPage;
            nextPage = totalPage;
        }
        if (pageIndex < 2)
        {
            pageIndex = 1;
            upPage = 1;
        }
        int startPage = pageIndex - (4);
        int endPage = pageIndex + 5;
        if (startPage < 1)
        {
            startPage = 1;
            if (endPage < 10 && totalPage > 9)
            {
                endPage = 10;
            }
            else
            {
                endPage = totalPage;
            }
        }
        if (endPage > totalPage)
        {
            endPage = totalPage;
            startPage = totalPage - 9;
            if (startPage < 1)
            {
                startPage = 1;
            }
        }
        nextPage = pageIndex + 1;
        upPage = pageIndex - 1;
        if (nextPage > totalPage)
        {
            nextPage = totalPage;
        }
        if (upPage < 1)
        {
            upPage = 1;
        }


        sb.Append(@"<div class='pagelinks'>");

        //<font>1/5</font>
        sb.Append(@"<font>" + pageIndex + "/" + totalPage + "</font>");

        //<span class="home_page"></span>
        //<span class="on_page"></span>
        if (pageIndex != 1)
        {
            sb.Append(@"<a class='home_page' href='javascript:void(0);' onclick='pageload(1)'></a>");
            sb.Append(@"<a class='on_page'  href='javascript:void(0);' onclick='pageload(" + upPage + ")'></a>");
        }
        else
        {
            sb.Append(@"<span class='home_page'></span>");
            sb.Append(@"<span class='on_page'></span>");
        }
        //<a class="next_page"></a>
        //<a class="end_page"></a>
        if (pageIndex != totalPage)
        {
            sb.Append(@"<a class='next_page' href='javascript:void(0);' onclick='pageload(" + (pageIndex+1) + ")'></a>");
            sb.Append(@"<a class='end_page' href='javascript:void(0);' onclick='pageload(" + totalPage + ")' ></a>");

        }
        else
        {
            sb.Append(@"<span class='next_page'></span>");
            sb.Append(@"<span class='end_page'></span>");

        }

        sb.Append("</div>");

    }
}
@Html.Raw(sb.ToString())