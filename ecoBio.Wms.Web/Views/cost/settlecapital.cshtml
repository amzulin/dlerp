<h2>@(settleno+(type == 0 ? "应收" : "应付") + "款明细")</h2>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="table_common">
 <thead>
  <tr>
       <th nowrap="nowrap">序号</th>
    <th>@(type == 0 ? "客户" : "供应商")</th>
    <th nowrap="nowrap">创建人员</th>
    <th nowrap="nowrap">结算单号</th>
    <th nowrap="nowrap">金额</th>
    <th nowrap="nowrap">@(type == 0 ? "收款" : "付款")日期</th>
    <th nowrap="nowrap">创建时间</th>
    <th>备注</th>
  </tr>
  </thead>
 <tbody>
     @foreach (var item in list)
     {  
         <tr>
      <td nowrap="nowrap">@pi</td>   
    <td>@item.supplierName</td>
    <td nowrap="nowrap">@item.createStaff</td>
    <td nowrap="nowrap">@item.settleNo</td>
    <td nowrap="nowrap">@item.tradeCost.ToString("n")</td>
    <td nowrap="nowrap">@item.tradeDate.ToString("yyyy-MM-dd")</td>
    <td nowrap="nowrap">@item.createDate.ToString("yyyy-MM-dd")</td>
    <td>@item.remark</td>
</tr>
     pi++;
     }
     @if (list.Count < 1)
     {
         <tr><td colspan="9">无@(type == 0 ? "收款" : "付款")明细</td></tr> 
     }
  </tbody>  
</table>
